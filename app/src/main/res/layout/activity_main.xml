<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hang.appportfolio.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="My NanoDegree apps"
        android:textSize="22sp" />

    <Button
        android:id="@+id/bt_movie"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#2E3D49"
        android:padding="16dp"
        android:text="POPULAR MOVIES"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_hawk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_movie"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#2E3D49"
        android:padding="16dp"
        android:text="STOCK HAWK"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_bigger"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_hawk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#2E3D49"
        android:padding="16dp"
        android:text="BUILD IT BIGGER"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_material"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_bigger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#2E3D49"
        android:padding="16dp"
        android:text="MAKE YOUR APP MATERIAL"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_go"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_material"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#2E3D49"
        android:padding="16dp"
        android:text="GO UBIQUITOUS"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_capstone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_go"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#2E3D49"
        android:padding="16dp"
        android:text="CAPSTONE"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</RelativeLayout>
